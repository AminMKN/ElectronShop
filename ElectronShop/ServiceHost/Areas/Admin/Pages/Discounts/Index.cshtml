@page
@model ServiceHost.Areas.Admin.Pages.Discounts.IndexModel
@{
    ViewData["Title"] = "تخفیفات";
}

<h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="form-group">
            <a class="btn btn-info" asp-page="./Create">تعریف تخفیف جدید</a>
        </div>
        <div class="form-group">
            <form class="form-inline" method="get">
                <select class="form-control mr-1" asp-for="SearchModel.ProductId" asp-items="Model.Products">
                    <option value="0">محصول...</option>
                </select>
                <button type="submit" class="btn btn-success mr-1">جستجو</button>
                <a asp-page="./Index" class="btn btn-primary">مشاهده همه</a>
            </form>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th>ردیف</th>
                        <th>محصول</th>
                        <th>درصد تخفیف</th>
                        <th>تاریخ شروع</th>
                        <th>تاریخ پایان</th>
                        <th>علت تخفیف</th>
                        <th>تاریخ ایجاد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int row = 1;
                        foreach (var discount in Model.Discounts)
                        {
                            <tr class="text-center">
                                <td>@row</td>
                                <td>@discount.Product</td>
                                <td>@discount.DiscountRate%</td>
                                <td>@discount.StartDate</td>
                                <td>@discount.EndDate</td>
                                <td>@discount.Reason</td>
                                <td>@discount.CreationDate</td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@discount.Id" class="btn btn-warning">ویرایش</a>
                                </td>
                            </tr>
                             row += 1;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>