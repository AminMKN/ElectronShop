@page
@model ServiceHost.Pages.Account.SignUpModel
@{
    ViewData["Title"] = "ثبت نام در الکترون شاپ";
    Layout = "Shared/_AccountLayout";
    if (Model.Message != null && Model.IsSuccess)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Message',
                text: 'فروشگاه اینترنتی الکترون شاپ',
                confirmButtonText: 'باشه',
            })
        </script>
    }
    else if (Model.Message != null && !Model.IsSuccess)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Message',
                text: 'فروشگاه اینترنتی الکترون شاپ',
                confirmButtonText: 'باشه',
            })
        </script>
    }
}

<div id="main">
    <div class="col-lg-4 col-md-6 col-xs-12 mx-auto">
        <div class="account-box">
            <a class="logo-account">
                <img class="mt-3" src="~/Theme/assets/images/shoplogo.jpg" alt="ElectronShop" title="ElectronShop">
            </a>
            <span class="account-head-line text-center">@ViewData["Title"]</span>
            <div class="content-account">
                <div class="massege-light">اگر قبلا با ایمیل ثبت نام کرده اید میتوانید وارد شوید</div>
                <form method="post">
                    <div>
                        <label asp-for="Command.FullName" class="pull-right">نام و نام خانوادگی</label>
                        <input asp-for="Command.FullName" type="text" class="form-control" placeholder="نام و نام خانوادگی" />
                        <span asp-validation-for="Command.FullName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Command.UserName" class="pull-right">نام کاربری</label>
                        <input asp-for="Command.UserName" type="text" class="form-control" placeholder="نام کاربری">
                        <span asp-validation-for="Command.UserName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Command.Email" class="pull-right">ایمیل</label>
                        <input asp-for="Command.Email" type="email" class="form-control" placeholder="ایمیل">
                        <span asp-validation-for="Command.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Command.PhoneNumber" class="pull-right">شماره موبایل</label>
                        <input asp-for="Command.PhoneNumber" type="tel" class="form-control" placeholder="شماره موبایل" />
                        <span asp-validation-for="Command.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Command.Password" class="pull-right">کلمه عبور</label>
                        <input asp-for="Command.Password" type="password" class="form-control" placeholder="کلمه عبور">
                        <span asp-validation-for="Command.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Command.RePassword" class="pull-right">تکرار کلمه عبور</label>
                        <input asp-for="Command.RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور">
                        <span asp-validation-for="Command.RePassword" class="text-danger"></span>
                    </div>
                    <div class="massege-light">کلمه عبور حداقل شش کاراکتر و حداکثر دوازده کاراکتر</div>
                    <div class="parent-btn">
                        <button type="submit" class="dk-btn dk-btn-info">
                            ثبت نام در الکترون شاپ
                            <i class="mdi mdi-account-plus-outline sign-in"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="account-footer">
                <span>قبلا در الکترون شاپ ثبت‌ نام کرده‌اید؟</span>
                <a asp-page="/Account/SignIn" class="btn-link-register">وارد شویــد</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}